<h2>Create Session Page</h2>

<div class="line"></div>

<form action="/generateSession" method="POST">

    <div class="form-group">
      <label>Course</label>
      <input type="textbox" class="form-control" placeholder="" name="course" value="{{course}}">
    </div>

    <div class="form-group">
      <label>Location</label>
      <input type="textbox" class="form-control" placeholder="" name="location" value="{{location}}">
    </div>

    <div class="form-group">
      <label>Date</label>
      <input type="date" class="form-control" placeholder="" name="date" value="{{date}}">
    </div>

    <div class="form-group">
      <label>Time</label>
      <input type="time" class="form-control" placeholder="" name="time" value="{{time}}"> 
    </div>

    <div class="form-group">
      <label>Description</label>
      <textarea class="form-control" name="description" rows="5">{{description}}</textarea>
    </div>

    <div class="form-group">
      <label>Held By:</label><br> 
      <input type="radio" name="heldBy" value="Student"> Student<br> 
      <input type="radio" name="heldBy" value="TA"> TA<br> 
    </div>

    {{#errors}}
	    <div class="alert-danger p-2 mb-2">
	    	{{msg}}
	   	</div>
		{{/errors}}

    <div class="text-right">
      <button type="submit" class="btn btn-primary">Create</button>          
    </div>

</form>