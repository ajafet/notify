<body>

{{>landingHeader}}

<div class="container">

<div class="row justify-content-md-center mt-5">

<div class="card" style="width: 36rem;">
  <div class="card-body">
    <center><h5 class="card-title">Register</h5></center>

    <form action="/action" method="POST">
		<div class="form-group">
			<label for="exampleInputEmail1">Username</label>
		    <input type="textbox" class="form-control" placeholder="" name="username" value="{{username}}">
		</div>
    <div class="form-group">
      <label for="exampleInputEmail1">Email</label>
        <input type="textbox" class="form-control" placeholder="" name="email" value="{{email}}">
    </div>
		<div class="form-group">
		    <label for="exampleInputPassword1">Password</label>
		    <input type="password" class="form-control" placeholder="" name="password">
		</div>
		{{#errors}}
	    <div class="alert-danger p-2 mb-2">
	    	{{msg}}
	   	</div>
		{{/errors}}
    <center><a href="/">Already have an account?</a></center>
    <br>
		<center><button type="submit" class="btn btn-primary" name="register">Register</button></center>
	</form>

  </div>
</div>

</div>
</div>

